import modelo.Consultoria;
import modelo.Hardware;
import modelo.Producto;
import modelo.Software;

import org.hibernate.Session;

import util.HibUtil;


public class Pruebas {

	public static void main(String[] args) { 
		
		Session s = HibUtil.getSessionFactory().openSession();
		s.beginTransaction();
		
		Producto p = new Producto(0,"ProductoGenerico",0);
		Software sw = new Software(0,"WEB",20000,"JSF+Hib");
		Hardware hw = new Hardware(0,"PC",1000,15);
		Consultoria c = new Consultoria(0,"XXX",50,400);
		
		s.save(p);
		s.save(sw);
		s.save(hw);
		s.save(c);		
		
		s.getTransaction().commit();
		s.close();
		
		
		
	}
	
	
}
